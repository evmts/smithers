{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": ["bun-types"],
    "lib": ["ESNext"],
    "resolveJsonModule": true,
    "paths": {
      "plue": ["./src/index.ts"]
    }
  },
  "include": ["src/**/*", "evals/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
