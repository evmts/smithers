{
  "name": "@evmts/smithers",
  "version": "1.0.0",
  "description": "Build AI agents with Solid.js - Declarative JSX for Claude orchestration",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./renderer": {
      "import": "./src/renderer.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "solid-js": "^1.9.10"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.76",
    "solid-js": "^1.9.10"
  },
  "devDependencies": {
    "@solidjs/testing-library": "^0.8.10",
    "@types/bun": "latest",
    "@types/jsdom": "^27.0.0",
    "jsdom": "^27.4.0",
    "typescript": "^5.7.2",
    "vite": "^7.3.1",
    "vite-plugin-solid": "^2.11.10",
    "vitest": "^4.0.17"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evmts/smithers.git",
    "directory": "packages/smithers"
  },
  "homepage": "https://github.com/evmts/smithers#readme",
  "bugs": {
    "url": "https://github.com/evmts/smithers/issues"
  },
  "keywords": [
    "ai",
    "agent",
    "solid",
    "solidjs",
    "jsx",
    "llm",
    "claude",
    "anthropic",
    "smithers",
    "ralph"
  ],
  "author": "William Cory",
  "license": "MIT"
}
